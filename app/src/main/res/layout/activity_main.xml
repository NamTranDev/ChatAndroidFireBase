<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="namtran.chatfirebase.MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="5dp"
       android:textSize="25sp"
       android:textColor="@color/colorPrimary"
       android:layout_gravity="center"
       android:gravity="center"
       android:id="@+id/chat_firebase_txt_user"
       android:visibility="gone"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:hint="Room Chat"
          android:id="@+id/chat_firebase_edt_room"/>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="Add"
          android:id="@+id/chat_firebase_btn_addroom"/>

   </LinearLayout>

   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/chat_firebase_lv_room_chat"/>

</LinearLayout>
