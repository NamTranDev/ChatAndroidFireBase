<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_firebase_txt_user"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textStyle="bold"
        tool:text="NamTran"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chat_firebase_txt_user"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_firebase_txt_message_text"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            tool:text="Hello" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/chat_firebase_txt_message_image"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            tool:src="@drawable/image_pick_image"/>
    </RelativeLayout>
</RelativeLayout>